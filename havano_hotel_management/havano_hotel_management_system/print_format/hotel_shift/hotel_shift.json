 "font_size": 14,
 "html": "<style>\ntable, th, td { border: 1px solid #ddd; }\n.font-weight-bold { font-weight: bold; }\n.text-center { text-align: center; }\n.section-title { font-size: 16px; margin-top: 15px; margin-bottom: 8px; }\n</style>\n<table style=\"width:100%; border-collapse: collapse;\">\n    <tr>\n        <td colspan=\"2\" style=\"text-align:center; padding:15px;\">\n            <h2>HOTEL SHIFT REPORT</h2>\n            <p>{{ doc.company and frappe.db.get_value(\"Company\", doc.company, \"company_name\") or \"\" }}</p>\n        </td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"width:40%; padding:8px;\">Shift No.</td>\n        <td style=\"padding:8px;\">{{ doc.name }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px;\">Status</td>\n        <td style=\"padding:8px;\">{{ doc.status }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px;\">Shift Start</td>\n        <td style=\"padding:8px;\">{{ doc.get_formatted(\"shift_start\") or \"\" }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px;\">Shift End</td>\n        <td style=\"padding:8px;\">{{ doc.get_formatted(\"shift_end\") or \"\" }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px;\">Shift Supervisor</td>\n        <td style=\"padding:8px;\">{{ doc.shift_supervisor or \"\" }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px;\">Receptionist</td>\n        <td style=\"padding:8px;\">{{ doc.receptionist or \"\" }}</td>\n    </tr>\n</table>\n\n<div class=\"section-title font-weight-bold\">Room Status</div>\n<table style=\"width:100%; border-collapse: collapse;\">\n    <tr>\n        <td class=\"font-weight-bold\" style=\"width:50%; padding:8px; border:1px solid #ddd;\">Available Rooms</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.available_rooms or 0 }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px; border:1px solid #ddd;\">Rooms Checked IN</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.rooms_checked_in or 0 }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px; border:1px solid #ddd;\">Vacancy Rooms</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.vacancy_rooms or 0 }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px; border:1px solid #ddd;\">Dirty Rooms</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.dirty_rooms or 0 }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px; border:1px solid #ddd;\">Out of Order</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.out_of_order or 0 }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px; border:1px solid #ddd;\">Overdue Out</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.overdue_out or 0 }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px; border:1px solid #ddd;\">Reserved</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.reserved or 0 }}</td>\n    </tr>\n</table>\n\n<div class=\"section-title font-weight-bold\">Financial Summary</div>\n<table style=\"width:100%; border-collapse: collapse;\">\n    <tr>\n        <td class=\"font-weight-bold\" style=\"width:50%; padding:8px; border:1px solid #ddd;\">Total Cash Paid</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.get_formatted(\"total_cash_paid\") or \"0.00\" }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px; border:1px solid #ddd;\">Total Cash Outstanding</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.get_formatted(\"total_cash_outstanding\") or \"0.00\" }}</td>\n    </tr>\n    <tr>\n        <td class=\"font-weight-bold\" style=\"padding:8px; border:1px solid #ddd;\">Total Revenue</td>\n        <td style=\"padding:8px; border:1px solid #ddd;\">{{ doc.get_formatted(\"total_revenue\") or \"0.00\" }}</td>\n    </tr>\n</table>\n\n{% if doc.shift_users and doc.shift_users|length > 0 %}\n<div class=\"section-title font-weight-bold\">Users on Shift</div>\n<table style=\"width:100%; border-collapse: collapse;\">\n    <thead>\n        <tr>\n            <th style=\"padding:8px; border:1px solid #ddd; text-align:left;\">User</th>\n            <th style=\"padding:8px; border:1px solid #ddd; text-align:left;\">Start Time</th>\n            <th style=\"padding:8px; border:1px solid #ddd; text-align:left;\">End Time</th>\n            <th style=\"padding:8px; border:1px solid #ddd; text-align:right;\">Total Revenue</th>\n        </tr>\n    </thead>\n    <tbody>\n        {% for row in doc.shift_users %}\n        <tr>\n            <td style=\"padding:8px; border:1px solid #ddd;\">{{ row.user or \"\" }}</td>\n            <td style=\"padding:8px; border:1px solid #ddd;\">{{ row.get_formatted(\"start_time\") if row.start_time else \"\" }}</td>\n            <td style=\"padding:8px; border:1px solid #ddd;\">{{ row.get_formatted(\"end_time\") if row.end_time else \"\" }}</td>\n            <td style=\"padding:8px; border:1px solid #ddd; text-align:right;\">{{ frappe.utils.fmt_money(row.total_revenue) if row.total_revenue else \"0.00\" }}</td>\n        </tr>\n        {% endfor %}\n    </tbody>\n</table>\n{% endif %}\n\n{% if doc.revenue_by_centers and doc.revenue_by_centers|length > 0 %}\n<div class=\"section-title font-weight-bold\">Revenue by Centers</div>\n<table style=\"width:100%; border-collapse: collapse;\">\n    <thead>\n        <tr>\n            <th style=\"padding:8px; border:1px solid #ddd; text-align:left;\">Cost Center</th>\n            <th style=\"padding:8px; border:1px solid #ddd; text-align:left;\">Item Group</th>\n            <th style=\"padding:8px; border:1px solid #ddd; text-align:right;\">Revenue Amount</th>\n        </tr>\n    </thead>\n    <tbody>\n        {% for row in doc.revenue_by_centers %}\n        <tr>\n            <td style=\"padding:8px; border:1px solid #ddd;\">{{ row.cost_center or \"\" }}</td>\n            <td style=\"padding:8px; border:1px solid #ddd;\">{{ row.item_group or \"\" }}</td>\n            <td style=\"padding:8px; border:1px solid #ddd; text-align:right;\">{{ frappe.utils.fmt_money(row.revenue_amount) if row.revenue_amount else \"0.00\" }}</td>\n        </tr>\n        {% endfor %}\n    </tbody>\n</table>\n{% endif %}\n\n<div style=\"margin-top: 30px; padding: 10px;\">\n    <p class=\"font-weight-bold\">Printed on: {{ frappe.utils.formatdate(frappe.utils.nowdate()) }} {{ frappe.utils.format_time(frappe.utils.now()) }}</p>\n</div>",
